<div class="row mt-5">
    <div class="col-md-6 m-auto ">
        <div class="container mt-5 pl-5">
            <h2 class="text-center text-primary">Create New Account</h2>
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control border border-primary" style="border-radius: 20px;"
                        name="name" placeholder="Your Name " />
                </div>
                <div class="form-group">
                    <label for="">E-mail</label>
                    <input type="email" class="form-control border border-primary" style="border-radius: 20px;"
                        name="email" placeholder="Your Email " />
                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" class="form-control border border-primary" style="border-radius: 20px;"
                        name="password" placeholder="Your Password " value="" />
                </div>
                <div class="form-group">
                    <a href="/login">Already have Account?</a>
                    <button type="submit" class="btn btn-primary float-right">Sign up</button>
                </div>
            </form>
        </div>
    </div>
</div>