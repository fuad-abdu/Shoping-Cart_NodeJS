            {{#each products}}

            <div class="col-md-3 p-3 mt-4">

                <div class="card " style="width: 100%; height: 100%;">
                    <img class="Img ml-4 mt-1 mx-auto" style="height: auto; "
                        src="/product-images/{{this.product._id}}.jpg">
                    <div class="card-body">

                        <h5 class="card-title">{{this.product.name}}</h5>

                        <p class="card-text">{{this.product.description}}</p>

                        <h6 class="card-text">Rs.{{this.product.price}}</h6>

                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</section>

<style>
    th {
        color: rgb(55, 55, 255);
    }

    .Img {
        max-width: 100%;
        max-height: 100%;
        display: block;
    }
