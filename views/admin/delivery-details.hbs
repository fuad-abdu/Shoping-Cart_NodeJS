<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-5">
                <h2 class="text-center">Delivery Details</h2>

                {{#each details}}
                <div class="table mt-5 ">
                    <table>
                        <tr>
                            <th>Date:</th>
                            <td>{{this.date}}</td>
                        </tr>
                        <tr>
                            <th>Address:</th>
                            <td>{{this.deliveryDetails.address}}</td>
                        </tr>
                        <tr>
                            <th>Pincode:</th>
                            <td>{{this.deliveryDetails.pincode}}</td>
                        </tr>
                        <tr>
                            <th>Mobile:</th>
                            <td>{{this.deliveryDetails.mobile}}</td>
                        </tr>
                        {{/each}}
                        {{#each products}}
                        <tr>
                            <th>Product:</th>
                            <td>{{this.product.name}}</td>
                        </tr>
                        <tr>
                            <th>Quantity:</th>
                            <td>{{this.quantity}}</td>
                        </tr>
                
                        {{/each}}
                        {{#each details}}
                        <tr>
                            <th>Total:</th>
                            <td>Rs. {{this.totalAmount}}</td>
                        </tr>
                        <tr>
                            <th>Payment:</th>
                            <td>{{this.paymentMethod}}</td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>{{this.status}}</td>
                        </tr>
                        {{/each}}
                    </table>
                </div>

            </div>
            <div class="col-md-6 text-center my-auto">

                {{#each details}}
                <h1>{{this.userId}}</h1>
                <a href="#" onclick="funPacked('{{this.userId}}')" class="btn btn-primary mb-5 mr-2"> Packed <img src="/images/box.svg" alt=""></a>
                <a href="#" onclick="funShipped('{{this.userId}}'" class="btn btn-warning mb-5 mr-2"> Shipped <br> <img style="width: 55px; height: 55px;" src="/images/delivery-truck.svg" alt=""></a>
                <a href="#" class="btn btn-success mb-5 mr-2"> Delivered <br><img style="width: 55px; height: 55px;" src="/images/delivered.svg" alt=""></a>
                {{/each}}

                <h2 class="text-primary">Product Image</h2>
